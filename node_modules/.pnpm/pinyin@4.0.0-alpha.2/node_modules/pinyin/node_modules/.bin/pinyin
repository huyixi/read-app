#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/huyixi/i/read-app/node_modules/.pnpm/pinyin@4.0.0-alpha.2/node_modules/pinyin/bin/node_modules:/Users/huyixi/i/read-app/node_modules/.pnpm/pinyin@4.0.0-alpha.2/node_modules/pinyin/node_modules:/Users/huyixi/i/read-app/node_modules/.pnpm/pinyin@4.0.0-alpha.2/node_modules:/Users/huyixi/i/read-app/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/huyixi/i/read-app/node_modules/.pnpm/pinyin@4.0.0-alpha.2/node_modules/pinyin/bin/node_modules:/Users/huyixi/i/read-app/node_modules/.pnpm/pinyin@4.0.0-alpha.2/node_modules/pinyin/node_modules:/Users/huyixi/i/read-app/node_modules/.pnpm/pinyin@4.0.0-alpha.2/node_modules:/Users/huyixi/i/read-app/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/pinyin" "$@"
else
  exec node  "$basedir/../../bin/pinyin" "$@"
fi
