.book-list-x {
  margin: 1rem 0;
  color: var(--color-brand-primary); }
  .book-list-x .list-title {
    font-size: 1.4rem;
    margin: 0.4rem 0; }

.book-cover {
  position: relative; }

.book-cover-decor {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  background-image: linear-gradient(90deg, rgba(161, 161, 161, 0.25), rgba(21, 21, 20, 0.1) 1%, rgba(255, 255, 255, 0.15) 4%, rgba(148, 148, 148, 0.1) 8%, rgba(227, 227, 227, 0) 57%, rgba(222, 217, 217, 0.03) 91%, rgba(222, 217, 217, 0.05) 98%, rgba(255, 255, 255, 0.1));
  box-shadow: inset 0 0 rgba(0, 0, 0, 0.1); }

.book-cover-decor::after {
  border-color: rgba(0, 0, 0, 0.1); }

.scrolling-x {
  display: flex;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  gap: 0.8rem; }
  .scrolling-x .scrolling-card {
    flex: 0 0 auto;
    scroll-snap-align: start; }

.scrolling-x::-webkit-scrollbar {
  height: 0; }

.scrolling-x::-webkit-scrollbar-track {
  border-radius: 0; }

.scrolling-x::-webkit-scrollbar-thumb {
  border-radius: 0; }

.scrolling-x::-webkit-scrollbar-thumb:hover {
  background: none; }

article p {
  margin: 0.5rem 0; }
